<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="android:colorEdgeEffect">@color/grey</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/grey</item>
        <item name="dialogCornerRadius">15dp</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <!-- Gets rid of the "underline" in the text -->
    </style>


    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <style name="AttachmentTypeLabel">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
